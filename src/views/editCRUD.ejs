<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Latest compiled and minified CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
    />

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Edit CRUD</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <form method="POST" action="/put-crud?id=<%= data.id %>">
          <div class="form-row">
            <div class="col-12 mt-3 font-weight-bold" style="font-size: 30px">
              Edit a new user
            </div>
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label>First Name</label>
              <input
                type="text"
                class="form-control"
                name="firstName"
                placeholder="First name"
                value="<%= data.firstName %>"
              />
            </div>
            <div class="form-group col-md-6">
              <label>Last Name</label>
              <input
                type="text"
                class="form-control"
                name="lastName"
                placeholder="Last name"
                value="<%= data.lastName %>"
              />
            </div>
          </div>
          <div class="form-group">
            <label>Address</label>
            <input
              type="text"
              class="form-control"
              name="address"
              placeholder="1234 Main St"
              value="<%= data.address %>"
            />
          </div>
          <div class="form-row">
            <div class="form-group col-md-6">
              <label>Phone number</label>
              <input
                type="tel"
                class="form-control"
                name="phoneNumber"
                value="<%= data.phoneNumber %>"
              />
            </div>
            <div class="form-group col-md-3">
              <label>Sex</label>
              <select name="gender" id="select-gender" class="form-control">
                <option
                  selected="<%= data.gender === 1 ? true : '' %>"
                  value="1"
                >
                  Male
                </option>
                <option
                  selected="<%= data.gender === 0 ? true : '' %>"
                  value="0"
                >
                  Female
                </option>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
      </div>
    </div>
    <% var dataGender= data.gender %>
    <script>
      const mySelect = $('#select-gender');
      let gender= <%= dataGender %>;
      if(gender) {
        mySelect.val(gender);
      }
    </script>
  </body>
</html>
